<script>
					function SetEditForm(id, name, price, descr) {
						var modal = document.querySelector(".edit-modal");
						modal.style = "display:block";
						var form1 = document.querySelector(".editform");
						var id1 = form1.querySelector("input[name=id]");
						var name1 = form1.querySelector("input[name=name]");
						var price1 = form1.querySelector("input[name=price]");
						var description1 = form1.querySelector("input[name=description]");
						id1.value = id;
						name1.value = name;
						price1.value = price;
						description1.value = descr;

					}
</script>